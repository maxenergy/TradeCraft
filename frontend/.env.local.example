# ==========================================
# Next.js 环境变量配置
# ==========================================
# 这些变量在构建时和运行时都可用
# NEXT_PUBLIC_ 前缀的变量会暴露给浏览器
# ==========================================

# ==========================================
# API配置
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# ==========================================
# 认证配置
# ==========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# ==========================================
# Stripe配置
# ==========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# PayPal配置
# ==========================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id

# ==========================================
# Google Analytics
# ==========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==========================================
# 网站配置
# ==========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=TradeCraft
NEXT_PUBLIC_SITE_DESCRIPTION=跨境电商AI自动化平台

# ==========================================
# 功能开关
# ==========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false

# ==========================================
# 图片配置
# ==========================================
# 允许的图片域名（逗号分隔）
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,example.com,your-oss-domain.aliyuncs.com

# ==========================================
# 国际化配置
# ==========================================
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en,id

# ==========================================
# Redis配置（服务端）
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=info
