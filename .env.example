# 环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# ===========================================
# 数据库配置
# ===========================================
DB_USERNAME=tradecraft
DB_PASSWORD=your_secure_password_here
DB_NAME=tradecraft_dev
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# JWT配置
# ===========================================
# 必须至少32个字符
JWT_SECRET=your-secret-key-at-least-32-characters-long-please-change-this
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# 阿里云OSS配置
# ===========================================
# 访问密钥
ALIYUN_OSS_ACCESS_KEY=your_access_key_here
ALIYUN_OSS_SECRET_KEY=your_secret_key_here

# Bucket配置
ALIYUN_OSS_BUCKET=tradecraft-images
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_REGION=cn-hangzhou

# CDN域名（可选）
ALIYUN_OSS_CDN_DOMAIN=https://cdn.yourdomain.com

# ===========================================
# AI服务配置
# ===========================================

# 文心一言（百度）
# 获取地址: https://console.bce.baidu.com/qianfan/ais/console/applicationConsole/application
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here

# GLM-4（智谱AI）
# 获取地址: https://open.bigmodel.cn/usercenter/apikeys
GLM_API_KEY=your_glm_api_key_here

# Azure翻译服务
# 获取地址: https://portal.azure.com/
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=eastasia
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# OpenAI（备用，可选）
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# 支付网关配置
# ===========================================

# Stripe
# 获取地址: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal
# 获取地址: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# ===========================================
# 汇率API配置
# ===========================================
# 使用 exchangerate-api.com 或其他汇率服务
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/CNY

# ===========================================
# Google Analytics
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# 应用配置
# ===========================================

# 后端服务
BACKEND_PORT=8080
BACKEND_URL=http://localhost:8080

# 前端服务
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# AI服务
AI_SERVICE_PORT=8000
AI_SERVICE_URL=http://localhost:8000

# ===========================================
# 邮件服务（可选）
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@tradecraft.com

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/tradecraft

# ===========================================
# 开发环境配置
# ===========================================
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# 生产环境配置（生产部署时使用）
# ===========================================
# NODE_ENV=production
# SPRING_PROFILES_ACTIVE=prod
# BACKEND_URL=https://api.yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api/v1

# ===========================================
# 其他配置
# ===========================================

# 允许的CORS源（多个用逗号分隔）
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 文件上传大小限制（MB）
MAX_FILE_SIZE=10

# Session超时时间（秒）
SESSION_TIMEOUT=1800

# ===========================================
# 安全提示
# ===========================================
# 1. 不要将此文件提交到Git仓库
# 2. 使用强密码和随机生成的密钥
# 3. 生产环境必须使用不同的密钥
# 4. 定期更换密钥和密码
# 5. 使用密钥管理服务（如AWS Secrets Manager、Azure Key Vault）存储敏感信息
